        <input type='textbox' id='textbox1' class="form-control" name="textbox1">
      </div>
    </div>
    <input type='button' class = "btn" value='Add Location' id='addButton'>
    <input type='button' class = "btn" value='Remove Location' id='removeButton'>

    <div class="form-group">
      <label for="EndingLoc" style ="margin-top: 5px;">Ending Location</label>
      <input type="text" class="form-control" id="endingloc" placeholder="Ending Location" name="endingLoc" required>
    </div>
    <div class="form-group">
      <input multiple="multiple" name="upload" type="file" required/>
    </div>
