<!--Scripts-->
<script type="text/javascript">
$(document).ready(function(){

  var counter = 2;

  $("#addButton").click(function () {

    if(counter>10){
      alert("Only 10 textboxes allow");
      return false;
    }

    var newTextBoxDiv = $(document.createElement('div'))
    .attr("id", 'MoreLoc' + counter);

    newTextBoxDiv.after().html('<label>Intermediate Location #'+ counter + ' : </label>' +
    '<input type="textbox" name="textbox' + counter +
    '" id="textbox' + counter + '" class="form-control">');

    newTextBoxDiv.appendTo("#MoreLoc");

    counter++;
  });

  $("#removeButton").click(function () {
    if(counter==1){
      alert("No more locations to remove");
      return false;
    }

    counter--;

    $("#MoreLoc" + counter).remove();

  });
});
</script>
